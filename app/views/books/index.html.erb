<h1>Books</h1>

<% @books.each do |book| %>
  <table>
   <tr>
     <th>Title</th>
     <th>Body</th>
     <th></th>
     <th></th>
     <th></th>
   </tr>
   <tr>
     <td><%= book.title %></td>
     <td><%= book.body %></td>
     <td><%= link_to "Show", "book_path(book.id)" %></td>
     <td><%= link_to "Edit", "/books/#{book.id}" %></td>
     <td></td>
   </tr>
 </table>
<% end %>

<h2>New book</h2>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  
  <p>Body</p>
  <%= f.text_area :body %>
  
  <%= f.submit 'Create Book' %>
<% end %>