<h1>Editing Book</h1>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>

  <p>Title</p>
  <%= f.text_field :title %>
  
  <p>Body</p>
  <%= f.text_area :body %>
  
  <p>
    <%= f.submit 'Update Book' %>
  </p>

<% end %>

<span><%=link_to "Show", book_path(@book.id) %> | <%= link_to "Back", index_book_path %></span>